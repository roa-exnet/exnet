{% extends 'base.html.twig' %}

{% block title %}Admin Música - Exnet{% endblock %}

{% block head %}
    {{ parent() }}
    <style>
        .admin-container {
            background-color: rgba(0, 0, 0, 0.7);
            border-radius: 8px;
            padding: 20px;
            color: white;
        }
        .admin-section {
            margin-bottom: 30px;
        }
        .admin-section-title {
            font-size: 20px;
            font-weight: bold;
            margin-bottom: 15px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.2);
            padding-bottom: 10px;
        }
        .data-table {
            width: 100%;
            border-collapse: collapse;
        }
        .data-table th, .data-table td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }
        .data-table th {
            background-color: rgba(0, 0, 0, 0.3);
        }
        .data-table tr:hover {
            background-color: rgba(255, 255, 255, 0.05);
        }
        .action-buttons {
            display: flex;
            gap: 5px;
        }
        .admin-btn {
            padding: 5px 10px;
            border-radius: 4px;
            font-size: 12px;
            cursor: pointer;
            border: none;
        }
        .btn-edit {
            background-color: #007bff;
            color: white;
        }
        .btn-delete {
            background-color: #dc3545;
            color: white;
        }
        .btn-new {
            background-color: #28a745;
            color: white;
            padding: 8px 15px;
            font-size: 14px;
            margin-bottom: 15px;
        }
        .thumbnail-small {
            width: 50px;
            height: 50px;
            object-fit: cover;
            border-radius: 4px;
        }
        .delete-form {
            display: inline;
        }
    </style>
{% endblock %}

{% block body %}
<div class="exnet-container-transparent p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="exnet-main-title">Administración de Música</h1>
        <div>
            <a href="{{ path('musica_index') }}" class="exnet-btn-small">
                <i class="fas fa-arrow-left"></i> Volver
            </a>
        </div>
    </div>

    <div class="admin-container">
        <div class="admin-section">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="admin-section-title">Canciones</h2>
                <a href="{{ path('musica_admin_nueva_cancion') }}" class="admin-btn btn-new">
                    <i class="fas fa-plus"></i> Nueva Canción
                </a>
            </div>
            
            <div class="table-responsive">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th style="width: 60px;">Imagen</th>
                            <th>Título</th>
                            <th>Artista</th>
                            <th>Álbum</th>
                            <th>Género</th>
                            <th>Duración</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for cancion in canciones %}
                            <tr>
                                <td>
                                    {% if cancion.imagen %}
                                        <img src="{{ cancion.imagen }}" alt="{{ cancion.titulo }}" class="thumbnail-small">
                                    {% else %}
                                        <div class="thumbnail-small bg-secondary d-flex align-items-center justify-content-center">
                                            <i class="fas fa-music"></i>
                                        </div>
                                    {% endif %}
                                </td>
                                <td>{{ cancion.titulo }}</td>
                                <td>{{ cancion.artista ?: '-' }}</td>
                                <td>{{ cancion.album ?: '-' }}</td>
                                <td>{{ cancion.genero ? cancion.genero.nombre : '-' }}</td>
                                <td>{{ cancion.duracionFormateada }}</td>
                                <td class="action-buttons">
                                    <a href="{{ path('musica_admin_editar_cancion', {id: cancion.id}) }}" class="admin-btn btn-edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form method="post" action="{{ path('musica_admin_eliminar_cancion', {id: cancion.id}) }}" class="delete-form" onsubmit="return confirm('¿Estás seguro de eliminar esta canción?')">
                                        <button type="submit" class="admin-btn btn-delete">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7" class="text-center">No hay canciones disponibles</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        
        <div class="admin-section">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="admin-section-title">Géneros Musicales</h2>
                <a href="{{ path('musica_admin_nuevo_genero') }}" class="admin-btn btn-new">
                    <i class="fas fa-plus"></i> Nuevo Género
                </a>
            </div>
            
            <div class="table-responsive">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Descripción</th>
                            <th>Icono</th>
                            <th>Canciones</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in generos %}
                            <tr>
                                <td>{{ item.genero.nombre }}</td>
                                <td>{{ item.genero.descripcion|u.truncate(50, '...') }}</td>
                                <td>
                                    {% if item.genero.icono %}
                                        <i class="{{ item.genero.icono }}"></i> {{ item.genero.icono }}
                                    {% else %}
                                        -
                                    {% endif %}
                                </td>
                                <td>{{ item.cancionCount }}</td>
                                <td class="action-buttons">
                                    <a href="{{ path('musica_admin_editar_genero', {id: item.genero.id}) }}" class="admin-btn btn-edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form method="post" action="{{ path('musica_admin_eliminar_genero', {id: item.genero.id}) }}" class="delete-form" onsubmit="return confirm('¿Estás seguro de eliminar este género?')">
                                        <button type="submit" class="admin-btn btn-delete" {% if item.cancionCount > 0 %}disabled title="No se puede eliminar porque tiene canciones asociadas"{% endif %}>
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5" class="text-center">No hay géneros disponibles</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}