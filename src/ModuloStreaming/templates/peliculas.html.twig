{% extends 'base.html.twig' %}

{% block title %}Películas - Streaming Exnet{% endblock %}

{% block head %}
    {{ parent() }}
    <style>
        .video-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
            gap: 20px;
        }
        .video-card {
            background-color: rgba(0, 0, 0, 0.6);
            border-radius: 8px;
            overflow: hidden;
            transition: transform 0.3s;
        }
        .video-card:hover {
            transform: scale(1.05);
        }
        .video-thumbnail {
            position: relative;
            width: 100%;
            height: 0;
            padding-bottom: 56.25%; /* 16:9 aspect ratio */
            overflow: hidden;
        }
        .video-thumbnail img {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        .video-info {
            padding: 10px;
        }
        .video-title {
            font-size: 16px;
            color: white;
            margin-bottom: 5px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
        .video-meta {
            font-size: 12px;
            color: #aaa;
        }
        .filter-container {
            background-color: rgba(0, 0, 0, 0.6);
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 20px;
        }
        .filter-title {
            color: white;
            font-size: 18px;
            margin-bottom: 10px;
        }
        .category-filter {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            margin-bottom: 15px;
        }
        .category-badge {
            padding: 5px 10px;
            border-radius: 20px;
            background-color: #333;
            color: white;
            cursor: pointer;
            transition: background-color 0.3s;
        }
        .category-badge:hover {
            background-color: #555;
        }
        .category-badge.active {
            background-color: #007bff;
        }
        .movies-banner {
            background-color: rgba(0, 0, 0, 0.7);
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
            text-align: center;
        }
        .movies-title {
            color: white;
            font-size: 28px;
            margin-bottom: 10px;
        }
        .movies-description {
            color: #ccc;
            margin-bottom: 20px;
        }
    </style>
{% endblock %}

{% block body %}
<div class="exnet-container-transparent p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="exnet-main-title">Películas</h1>
        <div>
            <a href="{{ path('streaming_index') }}" class="exnet-btn-small me-2">
                <i class="fas fa-arrow-left"></i> Volver
            </a>
            <a href="{{ path('streaming_series') }}" class="exnet-btn-small me-2">Series</a>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('streaming_admin') }}" class="exnet-btn-small">Admin</a>
            {% endif %}
        </div>
    </div>

    <div class="movies-banner">
        <h2 class="movies-title">Catálogo de Películas</h2>
        <p class="movies-description">Explora nuestra colección de películas para todos los gustos.</p>
    </div>

    <!-- Filtros -->
    <div class="filter-container">
        <div class="filter-title">Filtrar por categoría</div>
        
        <!-- Filtro de categorías -->
        <div class="category-filter">
            <a href="{{ path('streaming_peliculas') }}" class="category-badge active">
                Todas
            </a>
            {% for categoria in categorias %}
                <a href="{{ path('streaming_peliculas', {categoria: categoria.id}) }}" 
                   class="category-badge">
                    {% if categoria.icono %}<i class="{{ categoria.icono }}"></i> {% endif %}
                    {{ categoria.nombre }}
                </a>
            {% endfor %}
        </div>
    </div>

    <!-- Resultados -->
    <div class="video-grid">
        {% for pelicula in peliculas %}
            <div class="video-card">
                <a href="{{ path('streaming_video_detalle', {id: pelicula.id}) }}">
                    <div class="video-thumbnail">
                        <img src="{{ pelicula.imagen ?: 'https://via.placeholder.com/300x169?text=Sin+imagen' }}" alt="{{ pelicula.titulo }}">
                    </div>
                    <div class="video-info">
                        <div class="video-title">{{ pelicula.titulo }}</div>
                        <div class="video-meta">
                            {% if pelicula.categoria %}
                                <span>{{ pelicula.categoria.nombre }}</span> • 
                            {% endif %}
                            {% if pelicula.anio %}
                                <span>{{ pelicula.anio }}</span>
                            {% endif %}
                        </div>
                    </div>
                </a>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-info">No se encontraron películas.</div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}