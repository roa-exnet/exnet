{% extends 'base.html.twig' %}

{% block title %}Admin Streaming - Exnet{% endblock %}

{% block head %}
    {{ parent() }}
    <style>
        .admin-container {
            background-color: rgba(0, 0, 0, 0.7);
            border-radius: 8px;
            padding: 20px;
            color: white;
        }
        .admin-section {
            margin-bottom: 30px;
        }
        .admin-section-title {
            font-size: 20px;
            font-weight: bold;
            margin-bottom: 15px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.2);
            padding-bottom: 10px;
        }
        .data-table {
            width: 100%;
            border-collapse: collapse;
        }
        .data-table th, .data-table td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }
        .data-table th {
            background-color: rgba(0, 0, 0, 0.3);
        }
        .data-table tr:hover {
            background-color: rgba(255, 255, 255, 0.05);
        }
        .action-buttons {
            display: flex;
            gap: 5px;
        }
        .admin-btn {
            padding: 5px 10px;
            border-radius: 4px;
            font-size: 12px;
            cursor: pointer;
            border: none;
        }
        .btn-edit {
            background-color: #007bff;
            color: white;
        }
        .btn-delete {
            background-color: #dc3545;
            color: white;
        }
        .btn-new {
            background-color: #28a745;
            color: white;
            padding: 8px 15px;
            font-size: 14px;
            margin-bottom: 15px;
        }
        .tipo-badge {
            padding: 3px 8px;
            border-radius: 4px;
            font-size: 12px;
        }
        .tipo-serie {
            background-color: #dc3545;
        }
        .tipo-pelicula {
            background-color: #007bff;
        }
        .thumbnail-small {
            width: 80px;
            height: 45px;
            object-fit: cover;
            border-radius: 4px;
        }
        .delete-form {
            display: inline;
        }
    </style>
{% endblock %}

{% block body %}
<div class="exnet-container-transparent p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="exnet-main-title">Administración de Streaming</h1>
        <div>
            <a href="{{ path('streaming_index') }}" class="exnet-btn-small">
                <i class="fas fa-arrow-left"></i> Volver
            </a>
        </div>
    </div>

    <div class="admin-container">
        <!-- Sección: Videos -->
        <div class="admin-section">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="admin-section-title">Videos</h2>
                <a href="{{ path('streaming_admin_nuevo_video') }}" class="admin-btn btn-new">
                    <i class="fas fa-plus"></i> Nuevo Video
                </a>
            </div>
            
            <div class="table-responsive">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th style="width: 80px;">Imagen</th>
                            <th>Título</th>
                            <th>Tipo</th>
                            <th>Categoría</th>
                            <th>Año</th>
                            <th>Temporada/Episodio</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for video in videos %}
                            <tr>
                                <td>
                                    {% if video.imagen %}
                                        <img src="{{ video.imagen }}" alt="{{ video.titulo }}" class="thumbnail-small">
                                    {% else %}
                                        <div class="thumbnail-small bg-secondary d-flex align-items-center justify-content-center">
                                            <i class="fas fa-image"></i>
                                        </div>
                                    {% endif %}
                                </td>
                                <td>{{ video.titulo }}</td>
                                <td>
                                    <span class="tipo-badge {% if video.tipo == 'serie' %}tipo-serie{% else %}tipo-pelicula{% endif %}">
                                        {{ video.tipo|capitalize }}
                                    </span>
                                </td>
                                <td>{{ video.categoria ? video.categoria.nombre : '-' }}</td>
                                <td>{{ video.anio ?: '-' }}</td>
                                <td>
                                    {% if video.tipo == 'serie' and video.temporada %}
                                        T{{ video.temporada }}E{{ video.episodio }}
                                    {% else %}
                                        -
                                    {% endif %}
                                </td>
                                <td class="action-buttons">
                                    <a href="{{ path('streaming_admin_editar_video', {id: video.id}) }}" class="admin-btn btn-edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form method="post" action="{{ path('streaming_admin_eliminar_video', {id: video.id}) }}" class="delete-form" onsubmit="return confirm('¿Estás seguro de eliminar este video?')">
                                        <button type="submit" class="admin-btn btn-delete">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7" class="text-center">No hay videos disponibles</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        
        <!-- Sección: Categorías -->
        <div class="admin-section">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="admin-section-title">Categorías</h2>
                <a href="{{ path('streaming_admin_nueva_categoria') }}" class="admin-btn btn-new">
                    <i class="fas fa-plus"></i> Nueva Categoría
                </a>
            </div>
            
            <div class="table-responsive">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Descripción</th>
                            <th>Icono</th>
                            <th>Videos</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in categorias %}
                            <tr>
                                <td>{{ item.categoria.nombre }}</td>
                                <td>{{ item.categoria.descripcion|u.truncate(50, '...') }}</td>
                                <td>
                                    {% if item.categoria.icono %}
                                        <i class="{{ item.categoria.icono }}"></i> {{ item.categoria.icono }}
                                    {% else %}
                                        -
                                    {% endif %}
                                </td>
                                <td>{{ item.videoCount }}</td>
                                <td class="action-buttons">
                                    <a href="{{ path('streaming_admin_editar_categoria', {id: item.categoria.id}) }}" class="admin-btn btn-edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form method="post" action="{{ path('streaming_admin_eliminar_categoria', {id: item.categoria.id}) }}" class="delete-form" onsubmit="return confirm('¿Estás seguro de eliminar esta categoría?')">
                                        <button type="submit" class="admin-btn btn-delete" {% if item.videoCount > 0 %}disabled title="No se puede eliminar porque tiene videos asociados"{% endif %}>
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5" class="text-center">No hay categorías disponibles</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}