{# templates/registration/register.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}ExNet | Registro{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('css/roa-auth.css') }}">
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm roa-card">
                <div class="card-header bg-primary text-white roa-card-header">
                    <h2 class="h4 mb-0">Crear una cuenta</h2>
                </div>
                <div class="card-body p-4 roa-card-body">
                    {{ form_start(registrationForm) }}
                        <div class="mb-3 roa-form-group">
                            {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'form-label roa-form-label'}}) }}
                            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control roa-form-control'}}) }}
                            <div class="form-text text-danger roa-form-error">
                                {{ form_errors(registrationForm.email) }}
                            </div>
                        </div>
                        
                        <div class="mb-3 roa-form-group">
                            {{ form_label(registrationForm.nombre, null, {'label_attr': {'class': 'form-label roa-form-label'}}) }}
                            {{ form_widget(registrationForm.nombre, {'attr': {'class': 'form-control roa-form-control'}}) }}
                            <div class="form-text text-danger roa-form-error">
                                {{ form_errors(registrationForm.nombre) }}
                            </div>
                        </div>
                        
                        <div class="mb-3 roa-form-group">
                            {{ form_label(registrationForm.apellidos, null, {'label_attr': {'class': 'form-label roa-form-label'}}) }}
                            {{ form_widget(registrationForm.apellidos, {'attr': {'class': 'form-control roa-form-control'}}) }}
                            <div class="form-text text-danger roa-form-error">
                                {{ form_errors(registrationForm.apellidos) }}
                            </div>
                        </div>
                        
                        <div class="mb-3 roa-form-group">
                            {{ form_label(registrationForm.plainPassword.first, null, {'label_attr': {'class': 'form-label roa-form-label'}}) }}
                            {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'form-control roa-form-control'}}) }}
                            <div class="form-text text-danger roa-form-error">
                                {{ form_errors(registrationForm.plainPassword.first) }}
                            </div>
                        </div>
                        
                        <div class="mb-3 roa-form-group">
                            {{ form_label(registrationForm.plainPassword.second, null, {'label_attr': {'class': 'form-label roa-form-label'}}) }}
                            {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'form-control roa-form-control'}}) }}
                            <div class="form-text text-danger roa-form-error">
                                {{ form_errors(registrationForm.plainPassword.second) }}
                            </div>
                        </div>
                        
                        <div class="mb-3 form-check roa-form-check">
                            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input roa-form-check-input'}}) }}
                            {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'form-check-label roa-form-check-label'}}) }}
                            <div class="form-text text-danger roa-form-error">
                                {{ form_errors(registrationForm.agreeTerms) }}
                            </div>
                        </div>

                        {{ form_widget(registrationForm.submit, {'attr': {'class': 'btn btn-primary w-100 roa-btn roa-btn-primary roa-btn-block'}}) }}
                    {{ form_end(registrationForm) }}

                    <div class="mt-4 text-center roa-text-center roa-mt-3">
                        <p>¿Ya tienes cuenta? <a href="{{ path('app_login') }}">Inicia sesión</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}