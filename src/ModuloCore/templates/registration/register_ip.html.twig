{# templates/registration/register_ip.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}ExNet | Registro Rápido por IP{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('css/general.css') }}">
    <link rel="stylesheet" href="{{ asset('css/containers.css') }}">
    <link rel="stylesheet" href="{{ asset('css/responsive.css') }}">
    <link rel="stylesheet" href="{{ asset('css/navbar.css') }}">
    <link rel="stylesheet" href="{{ asset('css/roa-auth.css') }}">
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}

{% block body %}
<div class="exnet-vh-centered">
    <div class="exnet-container-transparent2">
        <div class="exnet-card-header">
            <h2 class="h4 mb-0">Registro Rápido por IP</h2>
        </div>
        <div class="exnet-card-body">
            <div class="ip-info">
                <p>Tu dirección IP <span class="ip-address">{{ currentIp }}</span> no está registrada en EXNET.</p>
                <p>Completa este formulario para acceso por IP privada (VPN).</p>
            </div>

            {% if errors is defined and errors %}
                <div class="exnet-alert exnet-alert-danger">
                    <ul class="mb-0">
                        {% for error in errors %}
                            <li>{{ error }}</li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}

            <form method="post">
                <div class="mb-3">
                    <label for="email" class="exnet-form-label">Email</label>
                    <input type="email" name="email" id="email" class="form-control exnet-form-control" 
                           value="{{ email|default('') }}" required autofocus>
                </div>

                <div class="mb-3">
                    <label for="nombre" class="exnet-form-label">Nombre</label>
                    <input type="text" name="nombre" id="nombre" class="form-control exnet-form-control" 
                           value="{{ nombre|default('') }}" required>
                </div>

                <div class="mb-3">
                    <label for="apellidos" class="exnet-form-label">Apellidos</label>
                    <input type="text" name="apellidos" id="apellidos" class="form-control exnet-form-control" 
                           value="{{ apellidos|default('') }}" required>
                </div>

                <button class="btn exnet-bg-primary w-100 text-white" type="submit">
                    Registrarse
                </button>
            </form>

            <div class="mt-4 text-center">
                <p class="exnet-text-light small">
                    Al registrarte, aceptas que tu dirección IP {{ currentIp }} será asociada a tu cuenta 
                    para permitir el acceso automático.
                </p>
            </div>
        </div>
    </div>
</div>
{% endblock %}