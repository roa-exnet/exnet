<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}ROA - Exnet{% endblock %}</title>
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    
    {% block head %}
        <link rel="stylesheet" href="{{ asset('bootstrap/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('fontawesome/css/all.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/general.css') }}">
        <link rel="stylesheet" href="{{ asset('css/containers.css') }}">
        <link rel="stylesheet" href="{{ asset('css/titles.css')}}">
        <link rel="stylesheet" href="{{ asset('css/navbar.css') }}">
        <link rel="stylesheet" href="{{ asset('css/buttons.css') }}">
        <link rel="stylesheet" href="{{ asset('css/responsive.css') }}">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    {% endblock %}
</head>
<body>
    {% set backgrounds = ['bg.jpg', 'bg2.jpg', 'bg3.jpg']|shuffle %}
    {% set random_bg = backgrounds[0] %}

    <style>
        body {
            background: url("{{ asset('images/' ~ random_bg) }}") no-repeat center center fixed;
            background-size: cover;
            height: 100vh;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
        }
    </style>

    {% block navbar %}
        <nav class="exnet-navbar d-flex align-items-center">
            <div class="container d-flex justify-content-between align-items-center">
                <h1 class="exnet-navbar-title">Exnet</h1>
                <div class="d-flex">
                    {% for menu in menus %}
                        <a href="{{ menu.ruta ?: '#' }}" class="nav-item">
                            <i class="{{ menu.icon }}"></i>
                            <span>{{ menu.nombre }}</span>
                        </a>
                    {% endfor %}
                </div>
            </div>
        </nav>
    {% endblock %}


    <div class="flex-grow-1">
        <main class="container mt-4">
            {% block body %}{% endblock %}
        </main>
    </div>

</body>

    {% block imports %}
        <script src="{{ asset('bootstrap/js/bootstrap.bundle.min.js') }}"></script>
        {# <script type="module" src="{{asset('js/ModuloCoreJs/view/...)}}"></script> #}
        {# <script src="{{ asset('js/navbar.js') }}"></script> #}
        
    {% endblock %}
</html>
