{% extends 'base.html.twig' %}

{% block title %}Añadir Módulos{% endblock %}

{% block head %}
    {{ parent() }}
    <style>
        .exnet-module-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }
        
        .exnet-module-card {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            position: relative;
            overflow: hidden;
        }
        
        .exnet-module-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 15px rgba(0, 0, 0, 0.2);
        }
        
        .exnet-installed-badge {
            position: absolute;
            top: 10px;
            right: 10px;
            background: linear-gradient(135deg, #84fab0 0%, #8fd3f4 100%);
            color: #333;
            padding: 5px 10px;
            border-radius: 15px;
            font-size: 0.8rem;
            font-weight: bold;
        }
        
        .exnet-module-icon {
            font-size: 2rem;
            margin-bottom: 15px;
            color: #8fd3f4;
            text-align: center;
        }
        
        .exnet-module-title {
            font-size: 1.25rem;
            margin-bottom: 10px;
            color: white;
            text-align: center;
        }
        
        .exnet-module-description {
            color: rgba(255, 255, 255, 0.8);
            margin-bottom: 20px;
            font-size: 0.9rem;
            text-align: center;
        }
        
        .exnet-module-actions {
            display: flex;
            gap: 10px;
            justify-content: center;
            flex-wrap: wrap;
        }
        
        .exnet-alert {
            padding: 15px;
            border-radius: 5px;
            margin-bottom: 20px;
        }
        
        .exnet-alert-info {
            background-color: rgba(91, 192, 222, 0.2);
            color: #d1ecf1;
            border: 1px solid rgba(91, 192, 222, 0.3);
        }
    </style>
{% endblock %}

{% block body %}
    <div class="exnet-container-transparent">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="exnet-section-title mb-0">Módulos Disponibles</h2>
            <a href="{{ path('modulos_marketplace') }}" class="exnet-btn exnet-btn-outline-light">
                <i class="fas fa-store me-2"></i> Explorar Marketplace
            </a>
        </div>
        <p class="mb-4">Personaliza tu experiencia en Exnet añadiendo los módulos que necesites.</p>
        
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="exnet-alert exnet-alert-{{ label }}">
                    <i class="fas fa-{{ label == 'success' ? 'check-circle' : 'exclamation-circle' }} me-2"></i>
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
        
        <div class="exnet-module-grid">
            {% for modulo in modulos %}
                <div class="exnet-module-card">
                    {% if modulo.estado == 1 %}
                        <span class="exnet-installed-badge">
                            <i class="fas fa-check me-1"></i> Instalado
                        </span>
                    {% endif %}
                    <div class="exnet-module-icon">
                        <i class="{{ modulo.icon }}"></i>
                    </div>
                    <h4 class="exnet-module-title">{{ modulo.nombre }}</h4>
                    <p class="exnet-module-description">{{ modulo.descripcion }}</p>
                    
                    <div class="exnet-module-actions">
                        {% if modulo.estado == 1 %}
                            <a href="{{ modulo.ruta }}" class="exnet-btn exnet-btn-blue">
                                <i class="fas fa-external-link-alt me-2"></i> Abrir
                            </a>
                            <form method="POST" action="{{ path('modulos_toggle_state', {'id': modulo.id}) }}" class="d-inline">
                                <button type="submit" class="exnet-btn exnet-btn-outline-light">
                                    <i class="fas fa-power-off me-2"></i> Desactivar
                                </button>
                            </form>
                        {% else %}
                            <form method="POST" action="{{ path('modulos_toggle_state', {'id': modulo.id}) }}" class="d-inline">
                                <button type="submit" class="exnet-btn exnet-btn-blue">
                                    <i class="fas fa-power-off me-2"></i> Activar
                                </button>
                            </form>
                            <form method="POST" action="{{ path('modulos_uninstall', {'id': modulo.id}) }}" class="d-inline" onsubmit="return confirm('¿Estás seguro de querer desinstalar este módulo?');">
                                <button type="submit" class="exnet-btn exnet-btn-outline-danger">
                                    <i class="fas fa-trash-alt me-2"></i> Desinstalar
                                </button>
                            </form>
                        {% endif %}
                    </div>
                </div>
            {% else %}
                <div class="exnet-alert exnet-alert-info" style="grid-column: 1 / -1;">
                    <i class="fas fa-info-circle me-2"></i>
                    No hay módulos instalados actualmente. Puedes añadir nuevos módulos desde el 
                    <a href="{{ path('modulos_marketplace') }}" class="alert-link">Marketplace</a>.
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}