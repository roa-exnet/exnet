{# src/ModuloChat/templates/chat_box.html.twig #}

<div class="chat-header">
    <div class="header-title-area">
        <h2>{{ roomName|default(roomId) }}</h2>
        <button id="voice-call-button" class="voice-call-button" title="Iniciar llamada de voz">
            <i class="fas fa-phone"></i> Llamar
        </button>
    </div>
    {% if participants is defined %}
        <div class="participants-count">{{ participants|length }} participante(s)</div>
    {% endif %}
</div>

<div class="chat-messages">
</div>

<div class="typing-indicator" id="typingIndicator" style="display: none;">Alguien est√° escribiendo...</div>

<div class="chat-input">
    <input type="text" id="messageInput" placeholder="Escribe un mensaje...">
    <button id="sendButton">Enviar</button>
</div>